	public int save(Orders o) throws Exception{
		String sql = "insert into Orders values(orid.nextval,?,?,?,?,?,?,?)";
		Object []params = {
				o.getOrnumber(),
				o.getDrid(),
				o.getDrnumber(),
				o.getOrprice(),
				o.getPatid(),
				o.getOrstate(),
				o.getOrdate()
		};
		DBManager db = new DBManager();
		int retn = db.executeUpdate(sql, params);
		return retn;
	}
