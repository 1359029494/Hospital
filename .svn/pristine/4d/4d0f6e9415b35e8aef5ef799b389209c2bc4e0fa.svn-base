* {
	padding: 0px;
	margin: 0px;
	list-style: none;
}

body {
	background: url("../images/ad/timg.jpg") no-repeat;
	background-size: 100%;
}

.box {
	background: url("../images/ad/timg.jpg") no-repeat;
	background-size: 100%;
	width: 540px;
	height: 330px;
	border: 1px solid #a9b9c4;
	position: absolute;
	left: 50%;
	top: 50%;
	margin-left: -270px;
	margin-top: -165px;
	box-shadow: 2px 2px 6px #a9b9c4, -2px -2px 6px #a9b9c4;
}

.box .count {
	width: 300px;
	height: 30px;
	margin-top: 60px;
	margin-bottom: 30px;
}

.box .pass {
	width: 300px;
	height: 30px;
}

.box p {
	text-align: center;
}

.box .check {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
}

.box .check .arrow {
	width: 40px;
	height: 35px;
	position: absolute;
	left: 0;
	top: 0;
	background-color: white;
	text-align: center;
	line-height: 40px;
}

.box .wrape {
	width: 300px;
	height: 35px;
	margin: 20px auto;
	font-family: 'Microsoft Yahei', "Arial";
	font-size: 12px;
	text-align: center;
	line-height: 35px;
	position: relative;
	background-color: #e8e8e8;
}

.wrape .bg {
	background-color: #7abe3d;
	height: 35px;
	width: 0;
}

.button .btn_denglu {
	width: 60px;
	height: 60px;
	display: none;
	margin: 0 auto;
	border: 1px solid #B9E6FD;
	border-radius: 100%;
	background-color: #B9E6FD;
	color: white;
}

.box .button {
	margin: 20px auto;
}